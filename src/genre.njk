---
pagination:
  data: genres
  size: 1
  alias: genre
permalink: "genres/{{ genre.name | slugify }}/"
tags: genre
eleventyComputed:
    title: "{{ genre.name }}"
---

<h1>{{ title }}</h1>

<p>{{ genre.intro }}</p>

<table>
  <tr>
    <td>AKA</td>
    <td>
      <ul>
      {% for alias in genre.aka.split(',') %}
        <li>{{ alias }}</li>
      {% endfor %}
      </ul>
    </td>
  <tr>
    <td>Origins</td>
    <td>{{ genre.origins }}</td>
  </tr>
  <tr>
    <td>Subgenres</td>
    <td>
      <ul>
      {% for subgenre in collections.genre %}
        {% if subgenre.data.title in genre.subgenres.split(',') %}
          <li><a href="{{ subgenre.url }}">{{ subgenre.data.title }}</a></li>
        {% endif %}
      {% endfor %}
      </ul>
    </td>
  </tr>
</table>

<p>{{ genre.about }}</p>